<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

    <id>dist</id>
    <formats>
        <format>zip</format>
    </formats>
    
    <includeBaseDirectory>true</includeBaseDirectory>

    <baseDirectory>jboss-modules-helloworld</baseDirectory>
    
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/kits</directory>
            <outputDirectory>/</outputDirectory>
            <fileMode>755</fileMode>
            <filtered>true</filtered>
        </fileSet>
    </fileSets>
    
    <files>
        <file>
            <source>${project.build.directory}/${project.artifactId}.jar</source>
            <outputDirectory>modules/system/layers/base/org/jboss/modules/examples/main</outputDirectory>
        </file>
    </files>
    
    
    <dependencySets>
        <dependencySet>
            <includes>
                <include>org.jboss.modules:jboss-modules:jar</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>